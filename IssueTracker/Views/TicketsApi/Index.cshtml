@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Issue Tracker";
}

<div id="alert-placeholder"></div>

<div class="text-center">
    <h2>Tickets</h2>
    <table class="table">
        <tbody>
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@ticket.Title</h5>
                            <span class="badge bg-primary rounded-pill">@ticket.Status</span>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Priority: @ticket.Priority</h6>
                            <p class="card-text">
                                Created on: @ticket.CreatedDate.ToShortDateString()
                            </p>
                        </div>
                        <div class="card-footer text-end">
                            <button class="btn btn-sm btn-outline-info view-details-btn"
                                    data-ticket-id="@ticket.Id"
                                    data-bs-toggle="modal"
                                    data-bs-target="#viewDetailsModal">
                                Details
                            </button>
                            
                            <button class="btn btn-sm btn-outline-primary edit-ticket-btn"
                                    data-ticket-id="@ticket.Id"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editTicketModal">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-ticket-btn"
                                    data-ticket-id="@ticket.Id"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteConfirmModal">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
        </tbody>
    </table>
</div>

<partial name="_EditTicketModal"/>
<partial name="_DeleteTicketModal"/>
<partial name="_ViewDetailsModal" />