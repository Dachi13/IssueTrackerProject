@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Ticket List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>

<div class="text-center">
    <h2>Tickets</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Status</td>
            </tr>
        }
        </tbody>
    </table>
</div>