@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Ticket List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>

<div class="text-center">
    <h2>Tickets</h2>
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Priority)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => ticket.Title)</td>
                <td>@Html.DisplayFor(modelItem => ticket.Priority)</td>
                <td>@Html.DisplayFor(modelItem => ticket.Status)</td>
                <td>@Html.DisplayFor(modelItem => ticket.CreatedDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-sm btn-warning">Edit</a>

                    <button class="btn btn-sm btn-danger delete-ticket-btn"
                            data-ticket-id="@ticket.Id"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteConfirmModal">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this ticket? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>